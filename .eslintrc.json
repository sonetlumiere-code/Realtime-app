{
  "extends": ["next"],
  //"extends": "next/core-web-vitals"
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "key-spacing": ["error", { 
    "beforeColon": false, 
    "afterColon": true 
    }],
    "no-multiple-empty-lines": ["error", {
      "max": 1,
      "maxEOF": 0
    }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "space-before-blocks": "error"
  }
}